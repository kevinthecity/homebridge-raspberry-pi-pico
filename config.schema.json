{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "accessories": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["name", "message"],
          "properties": {
            "name": {
              "type": "string",
              "description": "The name of the accessory."
            },
            "message": {
              "type": "string",
              "description": "The message to send to the Raspberry Pi Pico API when the accessory is toggled."
            }
          }
        }
      },
      "apiUrl": {
        "type": "string",
        "description": "The URL of the Raspberry Pi Pico API."
      }
    },
    "required": ["accessories", "apiUrl"]
  }